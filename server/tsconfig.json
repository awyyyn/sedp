{
	"compilerOptions": {
		"target": "ES2020",
		"module": "esnext",
		"lib": ["es2020"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"moduleResolution": "node",
		"rootDir": "./src",
		"rootDirs": ["./src"],
		"types": ["node"],
		"paths": {
			"@app/*": ["./src/*"]
		}
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules"]
}
