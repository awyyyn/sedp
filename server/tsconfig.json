{
	"compilerOptions": {
		"rootDirs": ["src"],
		"outDir": "dist",
		"lib": ["es2020"],
		"target": "es2020",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"types": ["node"],
		"paths": {
			"@src/*": ["./src/*"]
		}
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules"]
}
