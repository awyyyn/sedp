{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"paths": {
			"@app/*": ["./src/*"]
		}
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules"]
}
