generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  content String
  techStack   String[]
  duration    String
  imgUrls String[]

  repoUrl String
  liveUrl String?
  type String
  tags String[]
  // TimeStamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("projects")
}
 

model Technology {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  imgUrl String
  name   String @unique
  skill Int
  category Category

  // TimeStamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("technologies")
}

enum Category {
  FRONTEND
	BACKEND
	DATABASE
	DEVOPS
	DESIGN
	OTHER
}